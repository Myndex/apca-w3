{
  "name": "apca-w3",
  "version": "0.1.0",
  "description": "APCA the Advanced Perceptual Contrast Algorithm, a modern contrast method developed for WCAG 3",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "files": [
    "src",
    "dist"
  ],
  "keywords": [
    "color",
    "colour",
    "CSS",
    "contrast",
    "design tools",
    "WCAG",
    "accessibility",
    "readability"
  ],
  "author": "Andrew Somers",
  "license": "W3 License",
  "bugs": {
    "url": "https://github.com/Myndex/SAPC-APCA/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Myndex/apca-w3.git"
  },
  "homepage": "https://www.myndex.com/APCA/",
  "scripts": {
    "build": "npm run build:cjs; npm run build:esm; npm run build:umd",
    "prebuild": "rimraf dist",
    "build:cjs": "swc src -d dist/cjs -C module.type=commonjs",
    "build:esm": "swc src -d dist/esm -C module.type=es6",
    "build:umd": "swc src -d dist/umd -C module.type=umd",
    "demo": "npx superstatic .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.53",
    "@swc/core": "^1.2.119",
    "rimraf": "^3.0.2"
  }
}
